<div class="page-header">
  <div class="d-flex justify-content-between">
    <h1 class="h4">
      <%= link_to @project.name, @project, class: "font-weight-normal" %>
    </h1>
    <%= link_to "Edit Project", edit_project_path(@project) %>
  </div>
</div>

<div class="mb-4">
  Send webhooks to:
  <code class="ml-1 text-monospace"><%= webhooks_url(token: @project.token) %></code>
</div>

<h5><%= pluralize @project.events_count, "Event" %></h5>
<% @events.each do |event| %>
  <div>
    <%= link_to event.created_at, project_event_path(@project, event) %>
  </div>
<% end %>

<%== pagy_bootstrap_nav(@pagy) %>
