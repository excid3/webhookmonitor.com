<div class="page-header">
  <div class="d-flex justify-content-between">
    <h1 class="h4">
      <%= link_to @project.name, @project, class: "font-weight-normal" %>
      /
      <%= link_to "Event #{@event.id}", project_event_path(@project, @event) %>
    </h1>
    <%= link_to "Delete Event", project_event_path(@project, @event), method: :delete, data: { confirm: "Are you sure?" }  %>
  </div>
</div>

<h6 class="mt-4">Body</h6>
<pre><%= JSON.pretty_generate @event.parsed %></pre>

<h6 class="mt-4">Headers</h6>
<table class="table table-sm small mb-4">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
  <% @event.headers.sort_by { |k, v| k }.each do |key, value| %>
    <tr>
      <td><%= key %></td>
      <td><%= value %></td>
    </tr>
  <% end %>
  </tbody>
</table>
